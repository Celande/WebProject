{% extends "layout.html" %}

{% block page_title %} Home {% endblock %}

{% block body_header %}
Goats
{% endblock %}

{% block body_core %}
<div class="backg" style="background-color:#BBD9D5;padding-top:15px;padding-bottom:15px;">
  <form method="POST" action="/goats/search" enctype="multipart/form-data" id="goatform" name="goatform">
    <p style="text-align: center;">
      <label>Breed</label>
      <select name="breed_name">
         <option value = "">Any</option>
         {% for breed in breeds %}
            <option value="{{ breed.name }}">{{breed.name}}</option>
          {% endfor %}
      </select>&emsp;</label>

      <label>Gender</label>
      <select name="gender">
        <option value = "">Any</option>
        <option value="male">Male</option>
        <option value="female">Female</option>
      </select>&emsp;

      <label>Exploitation</label>
      <select name="exploitation">
        <option value = "">Any</option>
        <option value="milk">Milk</option>
        <option value="cheese">Cheese</option>
        <option value="meat">Meat</option>
        <option value="hair">Hair</option>
        <option value="pet">Pet</option>
        <option value="environment">Environment</option>
      </select>

      <input type="number" name="height" placeholder="Height"
      step="0.01" min=0> cm&emsp;

      <input type="number" name="weight" placeholder="Weight"
      step="0.01" min=0> kg&emsp;

      <input type=text list=colors
      name="color" placeholder="Select Color">
        <datalist id=colors name="color_datalist">
          <option value="white">White</<option>
          <option value="black">Black</<option>
          <option value="grey">Grey</option>
        </datalist>
      </input>

        <input type="number" name="price" id="price" min="0" max="999999.99" placeholder="0-999 999"> €<br>

        <input type="number" name="age" placeholder="Age"
        step="1" min=0> month(s)&emsp;
    </p>

    <div style="text-align: center;">
      <input type="submit" value="Search"/>
    </div>
  </form>
</div>
<div style="background-color:#CCE6E3;padding-top:20px;padding-left:50px;padding-bottom:20px;">
  {% for goat in goats %}
  <div class="row">
    <div class="col-lg-4 col-md-6 mb-4">
      <div class="card h-100">
    <a href="/goats/{{ goat.id }}">
      <div class="card-body">
      {% for img in imgs if goat.img_id == img.id %}
        <img src="/{{ img.path ~ img.type ~ img.num ~ "." ~ img.ext }}"
        width=80>
        {% endfor %}
    {{ goat.name }}</div></a>
  </div>
  </div>
  </div>
  {% endfor %}
{% if goat %}
{% if img %}
    <img src="/{{ img.path ~ img.type ~ img.num ~ "." ~ img.ext }}"
    alt="{{ goat.name }}" width=200>
    {% endif %}
  <h4>Name: {{ goat.name }}</h4>
  <h5>Price: {{ goat.price }} €</h5>
  <h5>Age: {{ age }}</h5>
  <h5>Birthdate: {{ goat.birthdate|date("d/m/Y") }}</h5>
  <h5>Breed: {{ breed_name }}</h5>
  <h5>Gender: {{ goat.gender }}</h5>
  <h5>Localisation: {{ goat.localisation }}</h5>
  <h5>Description: {{ goat.description }}</h5>
  {% if goat.identification %}
  <h5>Identification: {{ goat.identification }}</h5>
  {% endif %}
  <h5>Created at: {{ goat.created_at|date("d/m/Y") }}</h5><br>
  <h5>Updated at: {{ goat.updated_at|date("d/m/Y") }}</h5><br>
  <form method="POST" action="/goats/remove">
    <input type="submit" value="Remove">
    <input type="hidden" name="id" value="{{ goat.id }}">
  </form>

  <form method="GET" action="/goats/update">
    <input type="hidden" name="id" value="{{ goat.id }}">
    <input type="submit" value="Update">
  </form>
{% endif %}
</div>
{% endblock %}

{% block body_footer %} {% endblock %}
