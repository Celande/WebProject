{% extends "layout.html" %}

{% block page_title %} My Webpage {% endblock %}

{% block body_header %}
  <h1>My Webpage</h1>
  {{ a_variable }}

  <ul id="navigation">
  {% for item in navigation %}
      <li><a href="{{ item.href }}">{{ item.caption }}</a></li>
  {% endfor %}
  </ul>
{% endblock %}

{% block body_core %}
  {% if name %}
      <h2>Hello home.twig {{name}}</h2>
  {% else %}
      <p>Try <a href="http://www.slimframework.com">SlimFramework</a></p>
  {% endif %}
{% endblock %}

{% block body_footer %} {% endblock %}
