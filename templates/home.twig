{% extends "layout.html" %}

{% block page_title %}
{% if goat %}
{{ goat.name }}
{% else %}
Home
{% endif %}
{% endblock %}

{% block body_header %}
Goats
{% endblock %}

{% block body_core %}
<div class="goat_form">
  <form method="POST" action="/goats/search" enctype="multipart/form-data" id="goatform" name="goatform">
    <div class="form-group">
      <div class="form_field">
        <label class="form-label">Breed</label>
        <select class="form-control" name="breed_name">
          <option value = "">Any</option>
          {% for breed in breeds %}
          <option value="{{ breed.name }}">{{breed.name}}</option>
          {% endfor %}
        </select>
      </div>
      <div class="form_field">
        <label class="form-label">Gender</label>
        <select class="form-control" name="gender">
          <option value = "">Any</option>
          <option value="male">Male</option>
          <option value="female">Female</option>
        </select>
      </div>
      <div class="form_field">
        <label class="form-label">Exploitation</label>
        <select class="form-control" name="exploitation">
          <option value = "">Any</option>
          <option value="milk">Milk</option>
          <option value="cheese">Cheese</option>
          <option value="meat">Meat</option>
          <option value="hair">Hair</option>
          <option value="pet">Pet</option>
          <option value="environment">Environment</option>
        </select>
      </div>
    </div>
    <div class="form-group">
      <div class="form_field">
        <div class="form-control">
          <input type="number" name="height" placeholder="Height"
          step="0.01" min=0> cm
        </div>
      </div>
      <div class="form_field">
        <div class="form-control">
          <input type="number" name="weight" placeholder="Weight"
          step="0.01" min=0> kg
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="form_field">
        <input class="form-control" type=text list=colors
        name="color" placeholder="Select Color">
        <datalist id=colors name="color_datalist">
          <option value="White"></option>
          <option value="Black"></option>
          <option value="Grey"></option>
        </datalist>
      </input>
    </div>
    <div class="form_field">
    <div class="form-control">
      <input type="number" name="price" min="0"
      max="99999.99" placeholder="0-999 999"> €
    </div>
  </div>
    <div class="form_field">
      <div class="form-control">
        <input class="no-border" type="number" name="age" placeholder="Age"
        step="1" min=0> month(s)
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="search_button">
      <input class="btn btn-primary" type="submit" value="Search"/>
    </div>
  </div>
</form>
</div>
<div class="show_animals">
  {% for goat in goats %}
  <div class="row">
    <div class="col-lg-4 col-md-6 mb-4">
      <div class="card h-100">
        <a href="/goats/{{ goat.id }}">
          <div class="card-body">
            {% for img in imgs if goat.img_id == img.id %}
            <img src="/{{ img.path ~ img.type ~ img.num ~ "." ~ img.ext }}"
            class="mini_img">
            {% endfor %}
            {{ goat.name }}</div></a>
          </div>
        </div>
      </div>
      {% endfor %}
    </div>

    {% if goat %}
    <div class="profile">
      {% if img %}
      <img src="/{{ img.path ~ img.type ~ img.num ~ "." ~ img.ext }}" class="show_img">
      {% endif %}
      <h4>Name: {{ goat.name }}</h4>
      <h5>Price: {{ goat.price }} €</h5>
      <h5>Age: {{ age }}</h5>
      <h5>Birthdate: {{ goat.birthdate|date("d/m/Y") }}</h5>
      <h5>Breed: {{ breed_name }}</h5>
      <h5>Gender: {{ goat.gender|capitalize }}</h5>
      <h5>Localisation: {{ goat.localisation|capitalize }}</h5>
      <h5>Description: {{ goat.description|capitalize }}</h5>
      {% if goat.identification %}
      <h5>Identification: {{ goat.identification }}</h5>
      {% endif %}
      <h5>Created at: {{ goat.created_at|date("d/m/Y") }}</h5><br>
      <h5>Updated at: {{ goat.updated_at|date("d/m/Y") }}</h5><br>
      <div class="form-group">
      <form method="POST" action="/goats/remove">
        <input style="float: right;" class="btn btn-primary" type="submit" value="Remove">
        <input type="hidden" name="id" value="{{ goat.id }}">
      </form>

      <form method="GET" action="/goats/update">
        <input type="hidden" name="id" value="{{ goat.id }}">
        <input style="float: left;" class="btn btn-primary" type="submit" value="Update">
      </form>
    </div>
    </div>
    {% endif %}
    {% endblock %}

    {% block body_footer %} {% endblock %}
